{% extends 'base.html.twig' %}

{% block title %}computer index{% endblock %}

{% block body %}
    <h1>computer index</h1>

    <table class="table" >
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Model</th>
                <th>Prix</th>
                <th>Year</th>
                <th>Km</th>
                <th>Fuel</th>
                <th>License</th>
                <th>Imgfile</th>
                <th>Is_visible</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for computer in computers %}
            <tr>
                <td>{{ computer.id }}</td>
                <td>{{ computer.model }}</td>                
                <td>{{ computer.description }}</td>                
                <td>{{ computer.prix }}</td>
                <td>{{ computer.year }}</td>
                <td>{{ computer.imgfile }}</td>
                <td>
                    <a href="{{ path('app_computer_show', {'id': computer.id}) }}">show</a>
                    <a href="{{ path('app_computer_edit', {'id': computer.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="12">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_computer_new') }}">Create new</a>
{% endblock %}
